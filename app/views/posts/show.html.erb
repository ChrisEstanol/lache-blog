<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<%= image_tag @post.image.url(:large) %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to("Previous Post", @post.previous) if @post.previous %>
<%= link_to("Next Post", @post.next) if @post.next %>
